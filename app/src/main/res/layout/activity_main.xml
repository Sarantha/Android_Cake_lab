<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@color/colorBackgroud"
    android:orientation="vertical"
    android:padding="20dp">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cake"
            android:textColor="@color/colorMainText2"
            android:textStyle="bold"
            android:fontFamily="sans-serif-black"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:textSize="34dp"
            android:paddingLeft="15dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" Lab"
            android:fontFamily="sans-serif-black"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:textColor="@color/colorMainText"
            android:textStyle="bold"
            android:textSize="34dp"/>
    </LinearLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">
    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:stretchColumns="1">


        <ImageView
            android:id="@+id/myImageView1"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:src="@drawable/blueberrycake"
            android:clickable="true"
            android:onClick="blueBerry">
        </ImageView>
        <TextView
            android:id="@+id/myImageViewText1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/myImageView1"
            android:layout_alignTop="@id/myImageView1"
            android:layout_alignRight="@id/myImageView1"
            android:layout_alignBottom="@id/myImageView1"
            android:layout_margin="1dp"
            android:gravity="center"
            android:text="Blue Berry Cake"
            android:textColor="#fff" />

        <ImageView
            android:id="@+id/myImageView2"
            android:layout_width="391dp"
            android:layout_height="200dp"
            android:src="@drawable/chocolate"
            android:layout_marginTop="10dp"
            android:clickable="true"
            android:onClick="chocolate">
        </ImageView>
        <TextView
            android:id="@+id/myImageViewText2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/myImageView2"
            android:layout_alignTop="@id/myImageView2"
            android:layout_alignRight="@id/myImageView2"
            android:layout_alignBottom="@id/myImageView2"
            android:layout_margin="1dp"
            android:gravity="center"
            android:text="One Bowl Chocolate Cake III"
            android:textColor="#fff"
            android:clickable="true"
            android:onClick="chocolate"/>

        <ImageView
            android:id="@+id/myImageView3"
            android:layout_width="391dp"
            android:layout_height="200dp"
            android:src="@drawable/redstrawberrycake"
            android:layout_marginTop="10dp"
            android:clickable="true"
            android:onClick="strawberry">
        </ImageView>
        <TextView
            android:id="@+id/myImageViewText3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/myImageView3"
            android:layout_alignTop="@id/myImageView3"
            android:layout_alignRight="@id/myImageView3"
            android:layout_alignBottom="@id/myImageView3"
            android:layout_margin="1dp"
            android:gravity="center"
            android:text="Red Strawberry Cake"
            android:textColor="#fff" />

    </TableLayout>

    </ScrollView>
</LinearLayout>